<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="#ffffff"/>

            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"/>

            <stroke
                android:width="2dp"
                android:color="#d4d4d4"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="#d4d4d4"/>

            <size
                android:width="5dp"
                android:height="5dp"/>
        </shape>

    </item>
</layer-list>