<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.CreateCardFragment"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card_stagetwo"
        android:src="@drawable/stage_2"
        android:layout_marginTop="61dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <FrameLayout
        android:id="@+id/order_input_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!-- TODO: Update blank fragment layout -->

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:id="@+id/main_view"
            android:background="@drawable/mn_wallpaper">

            <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="SAMPLE\nTEXT"
            android:id="@+id/card_text"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="textClicked" />

        </LinearLayout>

        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/nextstep"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:src="@mipmap/nextbutton"
            android:scaleType="fitCenter"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:layout_gravity="right|bottom" />

        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/previousstep"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:src="@mipmap/backbutton"
            android:scaleType="fitCenter"
            android:layout_gravity="left|bottom" />
    </FrameLayout>

</RelativeLayout>
