<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="biz.sendyou.senduandroid.Activity.LoginActivity"
    android:id="@+id/activity_login_background">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/login_background" />
    </FrameLayout>

    <ImageView
        android:layout_width="17.5dp"
        android:layout_height="17.5dp"
        android:id="@+id/imageView4"
        android:src="@drawable/lg_id"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/imageView5" />

    <ImageView
        android:layout_width="17.5dp"
        android:layout_height="17.5dp"
        android:id="@+id/imageView5"
        android:src="@drawable/lg_lock"
        android:layout_above="@+id/autoLogin"
        android:layout_alignStart="@+id/loginButton"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/loginButton"
        android:text = "로그인"
        android:layout_width="287.5dp"
        android:layout_height="42.5dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/SignUp1"
        android:layout_centerHorizontal="true"
        android:onClick="loginBtn"
        android:background="@drawable/round_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SENDU"
        android:textSize="16.725sp"
        android:id="@+id/SendU"
        android:layout_gravity="center_horizontal|top"
        android:textIsSelectable="false"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/imageView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="자동 로그인"
        android:letterSpacing="0"
        android:textColor="#FFFFFF"
        android:id="@+id/autologin"
        android:textSize="12.8225sp"
        android:layout_gravity="center_horizontal|top"
        android:layout_above="@+id/loginButton"
        android:layout_alignStart="@+id/imageView5"
        android:layout_marginBottom="30dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme = "@style/checkBoxStyle"
        android:id="@+id/autoLogin"
        android:checked="false"
        android:layout_gravity="center_horizontal|top"
        android:layout_above="@+id/loginButton"
        android:layout_alignStart="@+id/imageView5"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="55dp"
        android:buttonTint="#F13968"
        android:scaleX="0.8"
        android:scaleY="0.8"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="가입하기"
        android:id="@+id/SignUp2"
        android:letterSpacing="0"
        android:layout_gravity="center_horizontal|top"
        android:textSize="12.8225sp"
        android:layout_alignTop="@+id/SignUp1"
        android:layout_toEndOf="@+id/plane"
        android:textColor="#F13968"
        android:src="@drawable/sp_logo" />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idedit"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:inputType="text"
        android:maxLines="1"
        android:lines="1"
        android:background="@android:color/transparent"
        android:layout_alignEnd="@+id/loginButton"
        android:textCursorDrawable="@drawable/color_cursor"
        android:layout_alignBottom="@+id/imageView4"
        android:hint="아이디"
        android:layout_alignStart="@+id/autoLogin" />

    <ImageView
        android:id="@+id/plane"
        android:layout_width="87.5dp"
        android:layout_height="87.5dp"
        android:layout_above="@+id/SendU"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:maxLines="1"
        android:lines="1"
        android:ems="10"
        android:id="@+id/pwedit"
        android:background="@android:color/transparent"
        android:textCursorDrawable="@drawable/color_cursor"
        android:hint="비밀번호"
        android:layout_alignTop="@+id/imageView5"
        android:layout_alignStart="@+id/autoLogin"
        android:layout_alignEnd="@+id/idedit" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/underline1"
        android:src="@drawable/la_line1"
        android:layout_below="@+id/pwedit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/underline2"
        android:src="@drawable/la_line1"
        android:layout_below="@+id/idedit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="SENDU가 처음이신가요?"
        android:id="@+id/SignUp1"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal|top"
        android:textSize="12.8225sp"
        android:letterSpacing="0"
        android:layout_marginLeft="-10dp"
        android:layout_marginBottom="69dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/autologin" />

</RelativeLayout>
