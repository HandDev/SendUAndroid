<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="biz.sendyou.senduandroid.Activity.SignupActivity"
    android:background="@drawable/sp_back1">

    <ImageView
        android:id="@+id/Plane"
        android:layout_width="87.5dp"
        android:layout_height="87.5dp"
        android:src="@drawable/sp_logo"
        android:layout_marginTop="87dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <com.google.android.gms.common.SignInButton
        android:layout_width="287.5dp"
        android:layout_height="42.5dp"
        android:id="@+id/gmail_btn"
        android:layout_below="@+id/Select"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <com.facebook.login.widget.LoginButton
        xmlns:facebook="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fb_btn"
        android:layout_width="287.5dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        facebook:com_facebook_login_text=" "
        android:layout_below="@+id/gmail_btn"
        android:layout_alignStart="@+id/gmail_btn"
        android:layout_marginTop="10dp"
        android:paddingTop="20.5dp" />

    <ImageView
        android:layout_width="287.5dp"
        android:layout_height="42.5dp"
        android:id="@+id/email_btn"
        android:src="@drawable/sg_email"
        android:layout_below="@+id/fb_btn"
        android:layout_alignStart="@+id/fb_btn"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="287.5dp"
        android:layout_height="42.5dp"
        android:id="@+id/gmail_btnn"
        android:src="@drawable/gmail_btn"
        android:layout_alignTop="@+id/gmail_btn"
        android:layout_alignStart="@+id/gmail_btn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가입할 서비스를 선택하세요"
        android:id="@+id/Select"
        android:textSize="16.725sp"
        android:textColor="#868686"
        android:layout_below="@+id/Plane"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

</RelativeLayout>
