<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawer_layout"
    tools:context="biz.sendyou.senduandroid.Fragment.DrawFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stage"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/center_horizontal_line"
            android:gravity="center_horizontal"
            android:layout_height="20dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:id="@+id/stage1"
                android:adjustViewBounds="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/cic_gray" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/cic_gray"
                android:id="@+id/stage2"
                android:adjustViewBounds="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/cic_green"
                android:id="@+id/stage3"
                android:adjustViewBounds="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp" />
        </LinearLayout>




        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp">

            <TextView
                android:text="STEP1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_weight="1"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:textStyle="normal|bold" />

            <TextView
                android:text="STEP2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_weight="1"
                android:textColor="#000000"
                android:gravity="center_horizontal" />

            <TextView
                android:text="STEP3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_weight="1"
                android:textColor="#8cad6b"
                android:gravity="center_horizontal" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/heresign"
        android:textColor="#f25175"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:text="아래에 서명을 작성해주세요"
        android:layout_below="@+id/stage"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/draw"
        android:layout_below="@+id/button2"
        android:layout_above="@+id/frame">

    </RelativeLayout>


    <!-- TODO: Update blank fragment layout -->

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/nextstep"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:src="@mipmap/nextbutton"
            android:scaleType="fitCenter"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:layout_gravity="right|bottom" />

        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/previousstep"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:src="@mipmap/backbutton"
            android:scaleType="fitCenter"
            android:layout_gravity="left|bottom" />
    </FrameLayout>

    <Button
        android:text="초기화"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heresign"
        android:layout_centerHorizontal="true"
        android:id="@+id/button2"
        android:hint="초기화"/>

</RelativeLayout>