<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="biz.sendyou.senduandroid.Activity.LoginActivity">


    <ImageView
        android:id="@+id/plane"
        android:layout_width="87.5dp"
        android:layout_height="87.5dp"
        android:src="@drawable/la_plane"
        android:layout_above="@+id/SendU"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="320dp"
        android:layout_height="0.3dp"
        android:id="@+id/imageView3"
        android:src="@drawable/la_line1"
        android:layout_above="@+id/autoLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp" />

    <ImageView
        android:layout_width="320dp"
        android:layout_height="0.3dp"
        android:id="@+id/imageView2"
        android:src="@drawable/la_line2"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginBottom="-5dp" />

    <ImageView
        android:layout_width="17.5dp"
        android:layout_height="17.5dp"
        android:id="@+id/imageView5"
        android:src="@drawable/la_pwicon"
        android:layout_above="@+id/imageView3"
        android:layout_alignStart="@+id/loginButton"
        android:layout_marginBottom="5dp" />

    <ImageView
        android:layout_width="17.5dp"
        android:layout_height="17.5dp"
        android:id="@+id/imageView4"
        android:src="@drawable/la_idicon"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/imageView5" />

    <Button
        android:id="@+id/loginButton"
        android:text = "로그인"
        android:background="@drawable/la_loginbutton3"
        android:layout_width="287.5dp"
        android:layout_height="42.5dp"
        android:singleLine="true"
        android:layout_gravity="center_horizontal|bottom"
        android:textColor="@color/abc_background_cache_hint_selector_material_light"
        android:layout_marginBottom="74dp"
        android:layout_above="@+id/SignUp1"
        android:layout_centerHorizontal="true"
        android:onClick="loginBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SENDU"
        android:textSize="16.725sp"
        android:textColor="#000000"
        android:id="@+id/SendU"
        android:layout_gravity="center_horizontal|top"
        android:textIsSelectable="false"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/imageView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="자동 로그인"
        android:letterSpacing="0"
        android:textColor="#000000"
        android:id="@+id/autologin"
        android:textSize="12.8225sp"
        android:layout_gravity="center_horizontal|top"
        android:layout_above="@+id/loginButton"
        android:layout_alignStart="@+id/imageView5"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="SENDU가 처음이신가요?"
        android:id="@+id/SignUp1"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal|top"
        android:textSize="12.8225sp"
        android:letterSpacing="0"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/SendU" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="가입하기"
        android:id="@+id/SignUp2"
        android:letterSpacing="0"
        android:layout_gravity="center_horizontal|top"
        android:textSize="12.8225sp"
        android:layout_alignTop="@+id/SignUp1"
        android:layout_toEndOf="@+id/plane"
        android:textColor="#F13968" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme = "@style/checkBoxStyle"
        android:id="@+id/autoLogin"
        android:checked="true"
        android:layout_alignBottom="@+id/loginButton"
        android:layout_toEndOf="@+id/autologin"
        android:layout_marginBottom="50dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idedit"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignStart="@+id/SignUp1"
        android:layout_below="@+id/SendU"
        android:background="@android:color/transparent"
        android:layout_alignEnd="@+id/loginButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pwedit"
        android:background="@android:color/transparent"
        android:layout_above="@+id/autoLogin"
        android:layout_alignStart="@+id/idedit"
        android:layout_alignTop="@+id/imageView5"
        android:layout_alignEnd="@+id/idedit" />

</RelativeLayout>
